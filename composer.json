{
  "name": "brightnucleus/config",
  "description": "Minimal, reusable Config component.",
  "minimum-stability": "dev",
  "prefer-stable": true,
  "require-dev": {
    "malukenho/docheader": "^0.1.5",
    "mikey179/vfsStream": "^1.6",
    "phpunit/phpunit": "^4.0|^5.0",
    "Squizlabs/PHP_CodeSniffer": "^2.8"
  },
  "license": "MIT",
  "authors": [
    {
      "name": "Alain Schlesser",
      "email": "alain.schlesser@gmail.com"
    }
  ],
  "require": {
    "symfony/options-resolver": ">=2.8",
    "brightnucleus/exceptions": ">=0.2"
  },
  "autoload": {
    "psr-4": {
      "BrightNucleus\\Config\\": "src/"
    }
  },
  "scripts": {
      "check": [
          "@cs-check",
          "@test"
      ],
      "upload-coverage": "coveralls -v",
      "cs-check": "phpcs --colors",
      "cs-fix": "phpcbf --colors",
      "test": "phpunit --colors",
      "test-coverage": "phpunit --colors --coverage-clover clover.xml",
      "license-check": "docheader --ansi check src/"
  }
}
